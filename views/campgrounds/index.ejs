<% layout('layout/template.ejs') %>

<h1>All campgrounds</h1>
<a href="/campgrounds/new">Add new Campgound</a>
<ul>
    <% for(camp of campgrounds) { %>
        
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= camp.image %>" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-title"><%= camp.title %></div>
                        <div class="card-text"><%= camp.description %></div>
                        <div class="card-text"><small class="text-muted"><%= camp.location %></small></div>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp.id %>">View <%= camp.title %> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</ul>